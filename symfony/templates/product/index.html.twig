{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="buttonTitle">
        <h1>Product index</h1>

        <a class="cta" href="{{ path('app_product_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.label }}</td>
                <td>
                    <a class="cta" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class="cta" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
            <tr class="emptyRow"></tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
